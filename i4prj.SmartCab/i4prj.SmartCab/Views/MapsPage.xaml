<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:map="clr-namespace:i4prj.SmartCab.CustomControls"
             x:Class="i4prj.SmartCab.Views.MapsPage"
             Title="Opret tur">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" Padding="30" Margin="10">
            <Label Text="Din bestilte tur: " FontSize="25" FontAttributes="Bold"></Label>
            <map:BindableMap WidthRequest="100" HeightRequest="300"  MapPosition="{Binding PositionOfMap}" MapPins="{Binding LocationPins}" MapType="Street" Radius="{Binding MapRadius}" >
            </map:BindableMap>

            <StackLayout Orientation="Vertical">
                <Label Text="{Binding Price}"></Label>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Button Text="Bekræft" Command="{Binding ConfirmCommand}"></Button>
                <Button Text="Annullér" Command="{Binding CancelCommand}"></Button>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>