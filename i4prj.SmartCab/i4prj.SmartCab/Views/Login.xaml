<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="i4prj.SmartCab.Views.Login"
             Title="{Binding Title}"
             xmlns:prism="clr-namespace:Prism.Navigation.Xaml;assembly=Prism.Forms">
    
    <ScrollView Orientation="Vertical">
        <StackLayout Margin="10">
            <Label Text="E-mail"/>
            <Entry Text="{Binding Request.Email}" Keyboard="Email"  IsVisible="{Binding IsReady}"></Entry>
            <Entry Text="{Binding Request.Email}" Keyboard="Email"  IsVisible="{Binding IsBusy}" IsEnabled="false"></Entry>
            
            <Label Text="Kodeord"/>
            <Entry Text="{Binding Request.Password}" IsPassword="true" IsVisible="{Binding IsReady}"></Entry>
            <Entry Text="{Binding Request.Password}" IsPassword="true" IsVisible="{Binding IsBusy}" IsEnabled="false"></Entry>

            <ActivityIndicator Color="Red" IsRunning="true" IsVisible="{Binding IsBusy}" />
            
            <Button Text="Log ind" Command="{Binding SubmitRequestCommand}" IsVisible="{Binding IsReady}"></Button>
            <Button AutomationId="GoToCreateCustomer" Text="Opret bruger" Command="{prism:NavigateTo 'CreateCustomer'}" IsVisible="{Binding IsReady}" />
           
        </StackLayout>
    </ScrollView>
</ContentPage>
