<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="i4prj.SmartCab.Views.CreateCustomer" Title="{Binding Title}">
   <ScrollView Orientation="Vertical">
        <StackLayout Margin="10">
            <Label Text="Navn"/>
            <Entry x:Name="Name" Text="{Binding Request.Name}"></Entry>
            
            <Label Text="Telefonnr."/>
            <Entry x:Name="Phone" Text="{Binding Request.Phone}" Keyboard="Telephone"></Entry>
            
            <Label Text="E-mail"/>
            <Entry x:Name="Email" Text="{Binding Request.Email}" Keyboard="Email"></Entry>
            
            <Label Text="Kodeord"/>
            <Entry x:Name="Password" Text="{Binding Request.Password}" IsPassword="true"></Entry>
            
            <Label Text="BekrÃ¦ft kodeord"/>
            <Entry x:Name="PasswordConfirmation" Text="{Binding Request.PasswordConfirmation}" IsPassword="true"></Entry>
            
            <ActivityIndicator Color="Red" IsRunning="true" IsVisible="{Binding IsBusy}" />
            
            <Button Text="Opret" Command="{Binding SubmitRequestCommand}" IsVisible="{Binding IsReady}"></Button>
           
        </StackLayout>
    </ScrollView>
</ContentPage>